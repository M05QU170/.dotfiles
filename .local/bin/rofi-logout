#!/usr/bin/env bash

question=$(echo "Lock|Logout|Reboot|Shutdown|Suspend" | rofi -sep "|" \
    -dmenu -i -p 'System: ' "" -width 20 -hide-scrollbar \
    -eh 1 -line-padding 4 -padding 20 -lines 5 -color-enabled)

case $question in
    *Lock)
        i3lock-fancy
        ;;
    *Logout)
        #command -v xfce4-session-quit 2>/dev/null 2>&1 || command -v session-logout >/dev/null 2>&1
        #command -v session-logout
        #session-logout
        pkill -9 -u $USER
        #loginctl terminate-user $USER
        ;;
    *Reboot)
        systemctl reboot
        ;;
    *Shutdown)
        systemctl poweroff
        ;;
    *Suspend)
        i3lock-fancy && systemctl suspend
        ;;
    *)
        exit 0  # do nothing on wrong response
        ;;
esac
